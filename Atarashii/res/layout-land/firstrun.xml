<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/loginScreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp" >

        <ImageView
            android:id="@+id/loginIcon"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dp"
            android:padding="8dp"
            android:src="@drawable/icon" />

        <RelativeLayout
            android:id="@+id/loginForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/loginIcon"
            android:padding="8dp" >

            <TextView
                android:id="@+id/textblurb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/fr_textblurb"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edittext_malUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textblurb"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:hint="@string/fr_hint_user"
                android:padding="8dp" >

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/edittext_malPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edittext_malUser"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:hint="@string/fr_hint_pass"
                android:inputType="textPassword"
                android:padding="8dp" />

            <Button
                android:id="@+id/button_connectToMal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/edittext_malPass"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:text="@string/fr_action_connect" />

            <Button
                android:id="@+id/registerButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/button_connectToMal"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:text="@string/fr_noaccount_button" />
        </RelativeLayout>
    </RelativeLayout>

</ScrollView>