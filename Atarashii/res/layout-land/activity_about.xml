<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#EEEEEE">

    <RelativeLayout
        android:id="@+id/about_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/about_card"
            android:layout_width="315dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:padding="12dp">

            <ImageView
                android:id="@+id/app_icon"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:contentDescription="Application Icon"
                android:gravity="center_horizontal"
                android:paddingBottom="8dp"
                android:src="@drawable/icon" />

            <TextView
                android:id="@+id/app_description"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/app_description"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="16sp" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/contributors_card"
            android:layout_width="300dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/about_card"
            android:background="#FFFFFF"
            android:fadeScrollbars="false"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/contributors_card_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/contributors_card_title"
                    android:textColor="#0099CC"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/contributor_anima_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/contributor_anima_name"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:paddingLeft="8dp"
                    android:text="@string/contributor_anima_summary" />

                <TextView
                    android:id="@+id/contributor_motokochan_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/contributor_motokochan_name"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:paddingLeft="8dp"
                    android:text="@string/contributor_motokochan_summary" />

                <TextView
                    android:id="@+id/contributor_apkawa_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/contributor_apkawa_name"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:paddingLeft="8dp"
                    android:text="@string/contributor_apkawa_summary" />
                
                <TextView
                    android:id="@+id/contributor_dsko_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/contributor_dsko_name"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:text="@string/contributor_dsko_summary" />
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/community_card"
            android:layout_toRightOf="@id/contributors_card"
            android:layout_width="300dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:padding="12dp" >

            <TextView
                android:id="@+id/community_card_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/community_card_title"
                android:textColor="#0099CC"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/community_card_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/community"/>
        </LinearLayout>
        
        <ScrollView
            android:id="@+id/acknowledgements_card"
            android:layout_width="300dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/community_card"
            android:background="#FFFFFF"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/acknowledgements_card_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/acknowledgements_card_title"
                    android:textColor="#0099CC"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/acknowledgements_card_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/acknowledgements" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</HorizontalScrollView>
